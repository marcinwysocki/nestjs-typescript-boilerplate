{
  "name": "nestjs-typescript-boilerplate",
  "version": "0.2.0",
  "description": "A TypeScript boilerplate for Nest, including nodemon, TSLint and Prettier (for now).",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf node_modules coverage dist",
    "start": "nodemon",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "yarn lint -- --fix",
    "prestart:prod": "tsc",
    "start:prod": "node dist/server.js",
    "precommit": "lint-staged",
    "prepare": "yarn prestart:prod && yarn test",
    "prepublish": "yarn lint && yarn test",
    "release": "standard-version",
    "prettify:staged": "prettier --write --trailing-comma all --single-quote --tab-width 4 --parser typescript",
    "prettify": "yarn prettify:staged -- '\"src/**/*.ts\"'"
  },
  "lint-staged": {
    "*.ts": [
      "tslint -c tslint.json --fix",
      "prettify:staged",
      "test",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "src/.*\\.spec\\.ts",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "mapCoverage": true
  },
  "dependencies": {
    "@nestjs/common": "^4.0.0",
    "@nestjs/core": "^4.0.0",
    "@nestjs/microservices": "^4.0.0",
    "@nestjs/testing": "^4.0.0",
    "@nestjs/websockets": "^4.0.0",
    "express": "^4.15.3",
    "morgan": "^1.8.2",
    "redis": "^2.7.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.0",
    "typescript": "^2.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.0.36",
    "@types/jest": "^21.1.6",
    "@types/node": "^8.0.53",
    "husky": "^0.14.1",
    "jest-cli": "^21.2.1",
    "lint-staged": "^5.0.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.4.4",
    "standard-version": "^4.2.0",
    "ts-jest": "^21.2.2",
    "ts-node": "3.3.0",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.1.0"
  }
}
